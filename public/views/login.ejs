<%- include("partials/header") %>

<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <div class="text-center lg:text-left">
      <h1 class="text-5xl font-bold">Login</h1>
      <p class="py-6">Log in to add, edit or delete projects.</p>
    </div>
    <div class="card shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <form class="card-body" method="POST" action="/login">
        <div class="form-control">
          <label class="label"><span class="label-text">User Name</span></label>
          <input type="text" name="userName" value="<%= userName %>" placeholder="User Name" class="input input-bordered" required />
        </div>
        <div class="form-control">
          <label class="label"><span class="label-text">Password</span></label>
          <input type="password" name="password" placeholder="Password" class="input input-bordered" required />
        </div>
        <div class="form-control mt-6">
          <button class="btn btn-primary">Login</button>
        </div>

        <% if (errorMessage) { %>
        <div class="alert alert-error mt-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none"
            viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= errorMessage %></span>
        </div>
        <% } %>

      </form>
      <!-- Add "Back to Register" button -->
      <a href="/register" class="btn btn-outline mt-4">Back to Register</a>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
